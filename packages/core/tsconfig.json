{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext", // Changed to ESNext for Vite
    "moduleResolution": "bundler", // Changed for Vite
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "src/tests/**/*", "vitest.config.ts"],
  "exclude": ["node_modules", "dist"]
}